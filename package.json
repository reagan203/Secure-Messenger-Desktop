{
  "name": "electron-react-app",
  "version": "1.0.0",
  "description": "Electron + React + TypeScript application",
  "main": "build/main/main/main.js",
  "private": true,
  "scripts": {
    "dev:renderer": "webpack serve --mode development",
    "dev:main": "tsc -p src/main/tsconfig.json && cross-env NODE_ENV=development node scripts/launch-electron.js",
    "dev": "concurrently --kill-others \"npm run dev:renderer\" \"wait-on http://localhost:3000 && npm run dev:main\"",
    "build:renderer": "webpack --mode production",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build": "npm run build:main && npm run build:renderer",
    "start": "npm run build && node scripts/launch-electron.js",
    "dist": "npm run build && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc -p src/main/tsconfig.json --noEmit && tsc -p src/renderer/tsconfig.json --noEmit",
    "lint:types": "npm run typecheck",
    "prod": "npm run typecheck && npm run test && npm run build"
  },
  "build": {
    "appId": "com.electron.react-app",
    "productName": "ElectronReactApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/**/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@reduxjs/toolkit": "^2.11.2",
    "better-sqlite3": "^12.6.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-redux": "^9.2.0",
    "react-window": "^2.2.6",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/react-window": "^1.8.8",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.3",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "html-webpack-plugin": "^5.6.6",
    "jest": "^30.2.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3",
    "webpack": "^5.105.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  }
}
